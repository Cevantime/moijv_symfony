{% extends "base.html.twig" %}

{% block body %}
    <h1>Liste des utilisateurs</h1>

    <ul>
        {% for user in users %}
            <li>
                {{ user.firstname }} {{ user.lastname }}
                <a href="{{ path("user_detail", { id : user.id }) }}" title="Voir les détails">
                    détails
                </a>
            </li>
        {% endfor %}
    </ul>
{% endblock %}